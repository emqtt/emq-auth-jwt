{deps,
    [ {emqx, {git, "https://github.com/emqx/emqx.git", {branch, "develop"}}}
    , {clique, {git, "https://github.com/emqx/clique.git", {tag, "v0.3.11"}}}
    , {jwerl, {git, "https://github.com/G-Corp/jwerl.git", {tag, "1.0.0"}}}
    ]}.

{profiles,
    [{test, [
        {deps, [ {cuttlefish, {git, "https://github.com/emqx/cuttlefish", {tag, "v3.0.0"}}}
               , {emqx_ct_helpers, {git, "http://github.com/emqx/emqx-ct-helpers", {tag, "v1.1"}}}
               ]}
            ]}
]}.

{edoc_opts, [{preprocess, true}]}.
{erl_opts, [warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            warn_obsolete_guard,
            debug_info,
            {parse_transform}]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               warnings_as_errors, deprecated_functions]}.
{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.

{pre_hooks,
  [ {"(linux|darwin|solaris)", ct, "make -C \"$REBAR_DEPS_DIR/cuttlefish\" all"}
  , {"(linux|darwin|solaris)", compile, "make -C \"$REBAR_DEPS_DIR/cuttlefish\" all"}
  , {"(freebsd|netbsd|openbsd)", ct, "gmake -C \"$REBAR_DEPS_DIR/cuttlefish\" all"}
  , {"win32", ct, "make -C \"%REBAR_DEPS_DIR%/cuttlefish\" all -W test"}
  , {ct, "$REBAR_DEPS_DIR/cuttlefish/cuttlefish -l info -e etc/ -c etc/emqx_auth_jwt.conf -i priv/emqx_auth_jwt.schema -d data"}
  ]}.
